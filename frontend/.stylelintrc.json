{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "max-nesting-depth": [
      4,
      {
        "ignore": ["pseudo-classes"]
      }
    ],
    "selector-max-compound-selectors": [
      5,
      {
        "ignore": ["pseudo-classes"]
      }
    ]
  }
}
